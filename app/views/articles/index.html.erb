<div id="page-content">
	<h1 class="text-center mt-4">Listing all articles</h1>
	<div class="container">
		<% @articles.each do |article| %>
			<div class="row justify-content-md-center">
				<div class="col-8 mt-4">
					<div class="card text-center shadow mb-5 bg-white rounded">
						<div class="card-header font-italic">
							by Derek Evanson
						</div>
						<div class="card-body">
							<h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
								<p class="card-text"><%= truncate(article.description, length: 100) %></p>
								<%= link_to 'View', article_path(article.id), method: :get, class: "btn btn-outline-success" %>
								<%= link_to 'Edit', edit_article_path(article.id), method: :get, class: "btn btn-outline-info" %>
								<%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
						</div>
						<div class="card-footer text-muted">
						<small>Some text here</small>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>	
</div>

<table>
    <thread>
    <tr>
        </tr>
        <th>Title</th>
        <th colspan="3">Actions</th>
    </thread>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= link_to 'Show', article_path(article.id), method: :get %></td>
                <td><%= link_to 'Edit', edit_article_path(article.id), method: :get %></td>
                <td><%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p>
    <%= link_to 'Create new article', new_article_path %>
</p>

