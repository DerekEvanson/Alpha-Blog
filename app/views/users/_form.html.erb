<% if @user.errors.any? %>
    <h2>The following errors prevented the user from being saved</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
    
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>